  .footer-banner-links
    .footer-banner-left
      if theme.footer.owner.enable
      - var now = new Date()
      - var nowYear = now.getFullYear()
      if theme.footer.owner.since && theme.footer.owner.since != nowYear
        span.copyright!= `&copy;${theme.footer.owner.since} - ${nowYear} By ${config.author}`
      else
        span.copyright!= `&copy;${nowYear} By ${config.author}`
