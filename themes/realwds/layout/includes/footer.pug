#footer-social
  each url, icon in theme.social.left
    a.deal_link(href=url_for(trim(url.split('||')[0])) target="_blank" 
    title=url.split('||')[1] === undefined ? '' : trim(url.split('||')[1]))
      i(class=icon)
  if theme.lazyload.enable
    img.footer_mini_logo(data-lazy-src=url_for(theme.avatar.img) onerror=`this.onerror=null;this.src='` + url_for(theme.error_img.flink) + `'` alt="回到顶部" onclick="btf.scrollToDest(0,500)")
  else
    img.footer_mini_logo(src=url_for(theme.avatar.img) onerror=`this.onerror=null;this.src='` + url_for(theme.error_img.flink) + `'` alt="回到顶部" onclick="btf.scrollToDest(0,500)")  
  each url, icon in theme.social.right
    a.deal_link(href=url_for(trim(url.split('||')[0])) target="_blank" 
    title=url.split('||')[1] === undefined ? '' : trim(url.split('||')[1]))
      i(class=icon)

