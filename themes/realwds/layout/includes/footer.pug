#footer-banner
  .footer-banner-links
    .footer-banner-left
      if theme.footer.owner.enable
      - var now = new Date()
      - var nowYear = now.getFullYear()
      if theme.footer.owner.since && theme.footer.owner.since != nowYear
        span.copyright!= `&copy;${theme.footer.owner.since} - ${nowYear} By ${config.author}`
      else
        span.copyright!= `&copy;${nowYear} By ${config.author}`
      if theme.footer.copyright
        a.footer-banner-link(target="_blank" href='https://hexo.io/zh-cn/')='Hexo'
        a.footer-banner-link(target="_blank" href='https://github.com/jerryc127/hexo-theme-butterfly')='Butterfly'
        a.footer-banner-link(target="_blank" href='https://blog.zhheo.com/')='主题'
        a.footer-banner-link(target="_blank" href='/about/')='关于'
    .footer-banner-right
